@media (min-width: {{$:/themes/tiddlywiki/vanilla/metrics/sidebarbreakpoint}}) {
  .nc-sidebar .mobile-only {
    display: none;
  }
}

.nc-sidebar h1.tc-site-title {
  margin: 0;
}

.nc-sidebar p {
  margin: 0;
}

.nc-sidebar .tc-site-subtitle {
  color: <<colour site-title-foreground>>;
}

