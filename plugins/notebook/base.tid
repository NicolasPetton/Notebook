/* Top and bottom bars */

/* Hide the top-right bar */
.tc-topbar.tc-topbar-right {
  display: none;
}

div.tc-sidebar-header {
  padding: 0;
  min-height: 0;
}

.tc-story-river {
  padding: 6px 0 !important;
  width: 100% !important;
  max-width: 960px !important;
  margin: 0 auto !important;
  margin-top: 36px !important;
}

div.tc-tiddler-frame {
  width: 100%;
  margin: 20px 0;
  background: <<colour tiddler-background>>;
  box-shadow: 0 5px 20px <<colour tiddler-border>>;
  border-radius: 6px;
  padding: 42px 60px 60px 60px;
}

h1.tc-site-title {
  margin-top: 14px;
  font-size: 1.5em !important;
}

.nc-bar {
  padding: 10px;
  height: {{$:/themes/nico/notebook/metrics/topbar-height}};
  background: <<colour page-background>>;
  display: flex;
  justify-content: space-between;
}

.nc-topbar-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 400;
}

.nc-bar.nc-topbar {
  top: 0;
  background: <<colour topbar-background>>;
  max-width: 1000px;
  padding: 10px 40px;
  margin: 0 auto;
}

.nc-bar.nc-bottombar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 500;
}

.nc-bar .left svg {
  fill: <<colour sidebar-controls-foreground>>;
}

.nc-bar input[type="search"] {
  width: 400px;
  padding: .6em 1em;
  margin-top: -.2em;
  background: <<colour topbar-search-background>>;
  color: #283c46;
  transition: all ease-in .2s;
  border: 1px solid transparent;
  outline: 0;
}

.nc-bar input[type="search"]:focus {
  background: white;
  border: 1px solid #38aee8;
  box-shadow: 0 0 0 .2rem #e6f0ff;
}

.nc-bar .tc-block-dropdown.tc-search-drop-down {
  margin-left: 0;
  width: 400px;
  border: 0;
  box-shadow: 0 0 6px 0 #ccc;
  border-radius: 6px;
  padding: 20px 0;
}

.nc-bar p {
  margin: 0;
}

.nc-bar .tc-page-controls {
  margin-top: 0;
}

.nc-bar .tc-page-controls button {
  margin-right: .8em;
}

.nc-bar .tc-block-dropdown {
  max-height: 70vh;
  overflow: auto;
}

@media (max-width: {{$:/themes/tiddlywiki/vanilla/metrics/sidebarbreakpoint}}) {
  .nc-topbar {
    display: none;
  }

  .tc-story-river {
    padding: 0 !important;
    margin-top: 0 !important;
    margin-bottom: 60px !important;
  }

  div.tc-tiddler-frame {
    margin: 0;
    box-shadow: none;
    border-radius: 0;
    border-top: 0;
  }
}

@media (min-width: {{$:/themes/tiddlywiki/vanilla/metrics/sidebarbreakpoint}}) {
  .nc-bottombar {
    display: none;
  }
}

@media(max-width: 1400px) {
  .tc-story-river {
    max-width: 800px !important;
  }

  .nc-bar.nc-topbar {
    max-width: 840px;
  }
}

@media(max-width: 1100px) {
  .tc-story-river {
    max-width: 600px !important;
  }

  .nc-bar.nc-topbar {
    max-width: 640px;
  }

  .nc-bar input[type="search"] {
    width: 200px;
  }
}

/* Sidebar */

@keyframes sidebar-appear {
  0%   {
    left: -{{$:/themes/nico/notebook/metrics/sidebar-width}};
  }
  100% {
    left: 0;
  }
}

@keyframes sidebar-toggle-appear {
  0%   {
    left: 6px;
  }
  100% {
    left: calc({{$:/themes/nico/notebook/metrics/sidebar-width}} + 6px);
  }
}

<<if-sidebar """
@media (min-width: {{$:/themes/tiddlywiki/vanilla/metrics/sidebarbreakpoint}}) {
  .nc-sidebar {
    animation: sidebar-appear .14s;
  }

  .sidebar-toggle {
    animation: sidebar-toggle-appear .14s;
  }
}
""">>

